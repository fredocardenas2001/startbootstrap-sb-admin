extends ../layouts/dashboard.pug

block config
    - var bodyClass = 'sb-nav-fixed'
    - var pageTitle = 'Tabulate'
    - var sidenavStyle = 'sb-sidenav-dark'
    - var index = true

block content
    #tabulateMountPoint
    #directoryPanel.hidden
        #directory-container

append scripts
    // Load Tabulate entry module
    script(type='module', src='js/tabulate-entry.js')

prepend css
    link(href='https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css', rel='stylesheet')
    link(rel='stylesheet', href='assets/css/tabulate.css')
    link(rel='stylesheet', href='assets/css/directory.css')

